{
  "collectionName": "components_home_hero_complex_sections",
  "info": {
    "displayName": "Hero Complex Section",
    "description": "Complex hero section with featured article and most read widget"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": false
    },
    "subtitle": {
      "type": "text",
      "required": false
    },
    "featuredArticle": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article.article",
      "required": false
    },
    "mostReadArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "required": false
    },
    "showMostRead": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "maxMostReadArticles": {
      "type": "integer",
      "default": 4,
      "min": 1,
      "max": 10,
      "required": false
    },
    "useRandomFeaturedArticle": {
      "type": "boolean",
      "default": false,
      "required": true
    }
  }
}
