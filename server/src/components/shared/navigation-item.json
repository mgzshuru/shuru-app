{
  "collectionName": "components_shared_navigation_items",
  "info": {
    "displayName": "Navigation Item",
    "description": "Individual navigation menu item",
    "icon": "link"
  },
  "options": {},
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "maxLength": 50
    },
    "url": {
      "type": "string",
      "required": true
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "onHeader": {
      "type": "boolean",
      "default": false
    },
    "onSideBar": {
      "type": "boolean",
      "default": false
    },
    "subItems": {
      "type": "component",
      "repeatable": true,
      "component": "shared.navigation-sub-item"
    }
  }
}
