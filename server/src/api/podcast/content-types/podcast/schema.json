{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "singularName": "podcast",
    "pluralName": "podcasts",
    "displayName": "Podcast",
    "description": "Podcasts and audio content"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "podcast_date": {
      "type": "date",
      "required": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "video_file": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "video_url": {
      "type": "string",
      "required": false
    },
    "audio_url": {
      "type": "string",
      "required": false
    },
    "duration": {
      "type": "string",
      "required": false
    },
    "guests": {
      "type": "component",
      "repeatable": true,
      "component": "content.guest"
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
