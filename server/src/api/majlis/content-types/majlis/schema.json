{
  "kind": "collectionType",
  "collectionName": "majlises",
  "info": {
    "singularName": "majlis",
    "pluralName": "majlises",
    "displayName": "Majlis",
    "description": "Majlis and interviews"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "majlis_date": {
      "type": "date",
      "required": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "guests": {
      "type": "component",
      "repeatable": true,
      "component": "content.guest"
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
