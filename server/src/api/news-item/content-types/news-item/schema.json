{
  "kind": "collectionType",
  "collectionName": "news_items",
  "info": {
    "singularName": "news-item",
    "pluralName": "news-items",
    "displayName": "News",
    "description": "News articles and updates"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "news_date": {
      "type": "date",
      "required": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
