{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Articles with rich content support"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "enable_cover_image": {
      "type": "boolean",
      "default": false
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "content.rich-text",
        "content.image",
        "content.video-embed",
        "content.quote",
        "content.code-block",
        "content.gallery",
        "content.call-to-action"
      ],
      "required": true,
      "min": 1
    },
    "description": {
      "type": "text",
      "maxLength": 500
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "publish_date": {
      "type": "datetime",
      "required": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "magazine_issues": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::magazine-issue.magazine-issue",
      "inversedBy": "articles"
    },
    "newsletters": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::newsletter-edition.newsletter-edition",
      "inversedBy": "featured_articles"
    },
    "saved_by_users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::saved-article.saved-article",
      "inversedBy": "articles"
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}
